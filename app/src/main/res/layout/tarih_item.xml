<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tarih_cus_tc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Müşteri TC :"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tarih_entery"
                android:text="Giris :"
                android:textSize="18sp"
                android:layout_below="@+id/tarih_cus_tc" />

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Çıkış :"
                android:id="@+id/tarih_out"
                android:layout_below="@+id/tarih_entery"
                android:textSize="18sp" />

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tarih_room"
                android:text="Oda Adı :"
                android:textSize="18sp"
                android:layout_below="@+id/tarih_out" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>